#!/usr/bin/env node
// process.stdin.resume();
// process.stdin.setRawMode(false);

var inquirer = require('inquirer');

var options = {
    type: "checkbox",
    name: "ret",
    message: 'MESSAGE',
    choices: [
      'a',
      'b',
      'c',
      'd',
      'e',
      'f'
    ]
};

inquirer.prompt(options, function(answers) {
  // console.log('*********', answers);

  process.stdout.write('>>>>>> '+ answers.ret);
});


setTimeout(function () {
    process.stdin.emit("keypress", " ", { name: "space" });
    process.stdin.emit("keypress", null, { name: "down" });
    process.stdin.emit("keypress", " ", { name: "space" });
    // process.stdin.emit("keypress", null, { name: "enter" });
    // process.stdin.end();
}, 2000);

// console.log('Hello');

